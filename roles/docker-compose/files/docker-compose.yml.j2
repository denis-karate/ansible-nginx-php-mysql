version: '3.8'

services:
  nginx:
    build:
      context: ./nginx
      dockerfile: Dockerfile
    ports:
      - "88:88"
    restart: always  

  php:
    build:
      context: ./php
      dockerfile: Dockerfile
    restart: always  

  mysql:
    image: mysql:5.7
    environment:
      MYSQL_ROOT_PASSWORD: "{{ mysql_root_password }}"
    volumes:
      - mysql_data:/var/lib/mysql
    restart: always  

volumes:
  mysql_data:

